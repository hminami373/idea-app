<div class='chat-room-form'>
  <h1>アイデア投稿</h1>
  <%=form_with model: @idea, url: room_ideas_path, local: true do |f|%>
    <%= render "rooms/error_messages", model: f.object %>
    
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :image, :画像, class: 'chat-room-form__label'%>
        <span class="indispensable">必須</span>
      </div>

      <%# 画像 %>
      <div class='chat-room-form__field--right'>
         <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= f.file_field :image, id:"image" %>
          </div>     
       </div>
    </div>
    <%# /画像 %>

        <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :idea_info, :説明, class: 'chat-room-form__label'%>
        <span class="indispensable">必須</span> 
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :idea_info, class: 'chat__room_name chat-room-form__input', placeholder: '画像に対して説明してください'%>
      </div>
    </div>

    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit class: 'chat-room-form__action-btn'%>
      </div>
    </div>
  <% end %>
</div>
